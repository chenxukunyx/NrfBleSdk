<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="19dp"
            android:padding="10dp"
            android:src="@drawable/baseline_edgesensor_high_black_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#666666"
            android:textSize="17sp"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="未命名" />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#666666"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintTop_toBottomOf="@id/tv_nickname"
            tools:text="ukknknkn" />

        <TextView
            android:id="@+id/tv_device_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintTop_toBottomOf="@id/tv_device_name"
            tools:text="234234234234" />

        <TextView
            android:id="@+id/tv_has_init"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_initial_bg"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon"
            tools:text="已初始化" />


        <TextView
            android:id="@+id/tv_open_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#70a1ff"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_device_mac"
            app:layout_constraintRight_toLeftOf="@id/tv_modify_device_nickname"
            android:text="开门测试" />

        <TextView
            android:id="@+id/tv_modify_device_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#70a1ff"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_device_mac"
            app:layout_constraintRight_toRightOf="parent"
            android:text="修改信息" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#70a1ff"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_device_mac"
            app:layout_constraintRight_toLeftOf="@id/tv_open_door"
            android:text="删除" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>