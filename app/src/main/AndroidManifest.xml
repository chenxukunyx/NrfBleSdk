<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miracle.nrfblesdk">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@drawable/lmh_bluetooth_launcher_icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/lmh_bluetooth_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/mytheme">
        <activity android:name=".DeviceListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ScanResultActivity"/>

        <activity android:name=".InitialiedListActivity"/>
    </application>

</manifest>